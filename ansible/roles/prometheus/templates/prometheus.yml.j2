global:
  scrape_interval: 10s

scrape_configs:
  - job_name: 'prometheus_master'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'wordpress_node'
    static_configs:
      - targets: ['{{ wordpress_server_ip }}:9100']

  - job_name: 'docker_node'
    static_configs:
      - targets: ['{{ docker_server_ip }}:9100']

  - job_name: 'wordpress_apache'
    static_configs:
      - targets: ['{{ wordpress_server_ip }}:9117']

  - job_name: 'docker_engine'
    static_configs:
      - targets: ['{{ docker_server_ip }}:9323']

  - job_name: 'docker_apache'
    static_configs:
      - targets: ['{{ docker_server_ip }}:9117']

  - job_name: 'cadvisor'
    static_configs:
      - targets: ['{{ docker_server_ip }}:9182']

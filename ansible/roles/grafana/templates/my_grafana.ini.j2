[paths]
data = /var/lib/grafana/data
logs = /var/log/grafana
plugins = /var/lib/grafana/plugins
provisioning = /etc/grafana/provisioning

[server]
http_port = 3000
domain = 0.0.0.0
root_url = http://0.0.0.0:3000/

[database]
type = sqlite3
path = grafana.db

[log]
mode = console
level = info

[security]
admin_user = admin
admin_password = admin

[users]
allow_sign_up = true
